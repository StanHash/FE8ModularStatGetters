#ifndef MODULAR_GETTER_CURHP_EVENT
#define MODULAR_GETTER_CURHP_EVENT

pCurHPModifiers: // Current HP
	POIN prAddUnitCurHP prCapHPIfOverMax
WORD 0

prAddUnitCurHP: // Byte 0x13 in unit struct is Current HP
	rAdd(rSByteAt(0x13))

// prCapHPIfOverMax comes with MSG (InstallHelpers.event) since it's direct asm (+ you'll probably want it anyway)

#endif // MODULAR_GETTER_CURHP_EVENT
