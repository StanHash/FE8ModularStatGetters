#ifndef ENGINEHAX_NEGATIVESTATBOOSTS_EVENT
#define ENGINEHAX_NEGATIVESTATBOOSTS_EVENT

{
//Negative Stat Boosts
PUSH
	ORG $4bf2
		SHORT 0
		jumpToHack(NegStatBoosts)
	ORG $5900b0 // minus sign position fix
		WORD 0 0 0 $3ff0 $eaac $3ff0
	ORG $86ae2 // drawing the bars
		SHORT 0
		jumpToHack(NegativeStatBars)
POP

MESSAGE CURRENTOFFSET

ALIGN 4
NegStatBoosts:
	#incbin "_ASM/NSB/Boosts.bin"

MESSAGE CURRENTOFFSET

ALIGN 4
NegativeStatBars:
	#incbin "_ASM/NSB/Bars.bin"
}

#endif // ENGINEHAX_NEGATIVESTATBOOSTS_EVENT
